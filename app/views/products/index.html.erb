<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="card-columns">
  <% @products.each do |product| %>
    <div class="card">
      <img class="card-img-top" style='max-width: 225px' src=<%= product.picture_url %> alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.category %> <%= product.quantity %> <%= product.price %></p>
          <%= link_to 'Show', product, class: 'btn btn-primary' %>
          <%= link_to 'Add to cart', '#s', onclick: "addProductToCart(#{product.id})", class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>
